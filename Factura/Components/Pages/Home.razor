@page "/"

<PageTitle>INICIO</PageTitle>

<div class="container text-center mt-5">
    <h1 class="display-4">SISTEMA DE FACTURA</h1>
    <p class="lead">¡BIENVENIDO!</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-3">
            <button type="button"class="btn btn-primary btn-lg btn-block" @onclick="RegistrarFactura">
                <i class="bi bi-file-earmark-plus"></i> Registrar Factura
            </button>
        </div>
        <div class="col-md-3">
            <button class="btn btn-info btn-lg btn-block" @onclick="VerListaProductos">
                <i class="bi bi-box-seam"></i> Ver Lista de Productos
            </button>
        </div>
        <div class="col-md-3">
            <button class="btn btn-success btn-lg btn-block" @onclick="VerListaFacturas">
                <i class="bi bi-receipt"></i> Ver Lista de Facturas
            </button>
        </div>
    </div>
</div>

@code {
    [Inject] private NavigationManager Navigation { get; set; }

    void RegistrarFactura()
    {
        // Redirige al formulario de registrar factura sin el idFactura
        Navigation.NavigateTo("/productoform/{IdProducto:maxlength(50)?}");
    }

    void VerListaProductos()
    {
        Navigation.NavigateTo("/productos");
    }

    void VerListaFacturas()
    {
        Navigation.NavigateTo("/facturas");
    }
}
